<!-- Page Header -->
<!-- Set your background image for this header on the line below. -->
<header class="intro-header">
  <div class="container">
    <div class="row">
      <div class="col-lg-8 col-lg-offset-2 col-md-10 col-md-offset-1">
        <div class="site-heading tagged-with">
          <h1>Articles Tagged with<br/><%= @tag.name %></h1>
        </div>
      </div>
    </div>
  </div>
</header>

<!-- Main Content -->
<div class="container">
  <div class="row">
    <div class="col-lg-8 col-lg-offset-2 col-md-10 col-md-offset-1">
      <% @tag.articles.each do |article| %>
          <div class="post-preview">
            <%= link_to article_path(article) do %>
                <h2 class="post-title">
                  <%= article.title %>
                </h2>
                <h3 class="post-subtitle">
                  <%= truncate(article.body, length:75) %>
                </h3>
            <% end %>
            <p class="post-meta">Posted by <a href="#">Start Bootstrap</a> on <%= article.created_at.strftime("%B %d, %Y") %></p>
          </div>
          <hr>
      <% end %>
    </div>
  </div>
</div>