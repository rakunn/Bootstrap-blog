<%= form_for [ @article, @comment ], html:{class: 'form-style'} do |f| %>
    <p>
      <%= f.label :author_name %><br/>
      <%= f.text_field :author_name %>
    </p>
    <p>
      <%= f.label :body %><br/>
      <%= f.text_area :body %>
    </p>
    <p>
      <%= f.submit 'Submit' %>
    </p>
<% end %>