<!-- Page Header -->
<!-- Set your background image for this header on the line below. -->
<header class="intro-header post-header">
  <div class="container">
    <div class="row">
      <div class="col-lg-8 col-lg-offset-2 col-md-10 col-md-offset-1">
        <div class="post-heading">
          <h1>Edytuj artykuł</h1>
        </div>
      </div>
    </div>
    <%= link_to article_path(@article), class: 'edit_link' do %>
        <i class="fa fa-eye" aria-hidden="true"></i> Zobacz artykuł
    <% end %>
  </div>
</header>

<!-- Post Content -->
<article>
  <div class="container">
    <div class="row">
      <div class="col-lg-8 col-lg-offset-2 col-md-10 col-md-offset-1">
        <%= render 'form' %>
      </div>
    </div>
  </div>
</article>